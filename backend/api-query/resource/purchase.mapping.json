{
  "settings": {
    "analysis": {
      "filter": {
        "autocomplete_filter": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20
        }
      },
      "analyzer": {
        "autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "autocomplete_filter"
          ]
        },
        "textKeyword": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "history": {
      "dynamic": "strict",
      "properties": {
        "userId": {
          "type": "keyword"
        },
        "userName": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "docId": {
          "type": "keyword"
        },
        "docName": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "money": {
          "type": "integer"
        },
        "action": {
          "type": "keyword"
        },
        "actorId": {
          "type": "keyword"
        },
        "actorName": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "actorRole": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "actorMail": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "createdAt": {
        	"type": "date"
        }
      }
    }
  }
}