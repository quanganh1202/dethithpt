{
  "settings": {
    "analysis": {
      "filter": {
        "autocomplete_filter": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20
        }
      },
      "analyzer": {
        "autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "autocomplete_filter"
          ]
        },
        "textKeyword": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "collection": {
      "dynamic": "strict",
      "properties": {
        "name": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "description": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "numDocRefs": {
          "type": "text",
          "fields": {
            "raw":{
              "type": "integer"
            }
          }
        },
        "cates": {
          "properties": {
            "cateId": {
              "type": "keyword"
            },
            "cateName": {
              "type": "text",
              "analyzer": "autocomplete",
              "search_analyzer": "standard",
              "fields": {
                "raw": {
                  "type": "text",
                  "fielddata": true,
                  "analyzer": "textKeyword"
                }
              }
            }
          }
        },
        "classes": {
          "properties": {
            "classId": {
              "type": "keyword"
            },
            "className": {
              "type": "text",
              "analyzer": "autocomplete",
              "search_analyzer": "standard",
              "fields": {
                "raw": {
                  "type": "text",
                  "fielddata": true,
                  "analyzer": "textKeyword"
                }
              }
            }
          }
        },
        "yearSchools": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "subjects": {
          "properties": {
            "subjectId": {
              "type": "keyword"
            },
            "subjectName": {
              "type": "text",
              "analyzer": "autocomplete",
              "search_analyzer": "standard",
              "fields": {
                "raw": {
                  "type": "text",
                  "fielddata": true,
                  "analyzer": "textKeyword"
                }
              }
            }
          }
        },
        "priority": {
          "type": "integer"
        },
        "priorityCate": {
          "type": "integer"
        },
        "position": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "integer"
            }
          }
        },
        "view": {
          "type": "integer"
        },
        "userId": {
          "type": "keyword"
        },
        "userName": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "userEmail": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "createdAt": {
        	"type": "date"
        },
        "updatedAt": {
        	"type": "date"
        }
      }
    }
  }
}