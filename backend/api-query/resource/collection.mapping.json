{
  "settings": {
    "analysis": {
      "filter": {
        "autocomplete_filter": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20
        }
      },
      "analyzer": {
        "autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "autocomplete_filter"
          ]
        }
      }
    }
  },
  "mappings": {
    "collection": {
      "dynamic": "strict",
      "properties": {
        "name": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "description": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "numDocRefs": {
          "type": "text",
          "fields": {
            "raw":{
              "type": "integer"
            }
          }
        },
        "cates": {
          "properties": {
            "cateId": {
              "type": "keyword"
            },
            "cateName": {
              "type": "text",
              "analyzer": "autocomplete",
              "search_analyzer": "standard",
              "fields": {
                "raw": {
                  "type": "keyword"
                }
              }
            }
          }
        },
        "classId": {
          "type": "keyword"
        },
        "className": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "yearSchool": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "subjectId": {
          "type": "keyword"
        },
        "subjectName": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "userId": {
          "type": "keyword"
        },
        "userName": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "keyword"
            }
          }
        },
        "createdAt": {
        	"type": "date"
        },
        "updatedAt": {
        	"type": "date"
        }
      }
    }
  }
}