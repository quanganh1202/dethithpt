{
  "settings": {
    "analysis": {
      "filter": {
        "autocomplete_filter": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 20
        }
      },
      "analyzer": {
        "autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "autocomplete_filter"
          ]
        },
        "textKeyword": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "class": {
      "dynamic": "strict",
      "properties": {
        "name": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "description": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "numDocRefs": {
          "type": "text",
          "fields": {
            "raw":{
              "type": "integer"
            }
          }
        },
        "userId": {
          "type": "keyword"
        },
        "userName": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "userEmail": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "text",
              "fielddata": true,
              "analyzer": "textKeyword"
            }
          }
        },
        "view": {
          "type": "integer"
        },
        "createdAt": {
        	"type": "date"
        },
        "updatedAt": {
        	"type": "date"
        },
        "priority": {
          "type": "integer"
        },
        "position": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "standard",
          "fields": {
            "raw": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}