{
  "$id": "http://dethithpt.com/document-create-schema#",
  "title": "Document",
  "description": "Document schema validation",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "tags"],
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 255
    },
    "tags": {
      "type": "string",
      "minLength": 1
    },
    "approved": {
      "type": "integer",
      "enum": [0, 1]
    },
    "description": {
      "type": "string"
    },
    "prioriy": {
      "type": "integer",
      "enum": [0, 1]
    },
    "price": {
      "type": "string",
      "maxLength": 50,
      "pattern": "^[0-9]+$"
    },
    "cateIds": {
      "type": "string",
      "minLength": 1
    },
    "subjectIds": {
      "type": "string",
      "minLength": 1
    },
    "classIds": {
      "type": "string",
      "minLength": 1
    },
    "yearSchools": {
      "type": "string",
      "minLength": 1
    },
    "collectionIds": {
      "type": "string",
      "minLength": 1
    },
    "userId": {
      "type": "string"
    }
  }
}