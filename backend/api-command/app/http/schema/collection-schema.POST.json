{
  "$id": "http://dethithpt.com/collection-create-schema#",
  "title": "Collection",
  "description": "Collection schema validation",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "description", "classIds", "yearSchools", "subjectIds", "cateIds", "userId"],
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "cateIds": {
      "anyOf": [{
          "type": "string",
          "minLength": 1
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      ]
    },
    "classIds": {
      "anyOf": [{
          "type": "string",
          "minLength": 1
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      ]
    },
    "yearSchools": {
      "anyOf": [{
          "type": "string",
          "minLength": 1
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      ]
    },
    "subjectIds": {
      "anyOf": [{
          "type": "string",
          "minLength": 1
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      ]
    },
    "userId": {
      "type": "string"
    },
    "priority": {
      "type": "integer",
      "enum": [0, 1]
    }
  }
}