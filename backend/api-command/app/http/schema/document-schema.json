{
  "$id": "http://dethithpt.com/document-schema#",
  "title": "Document",
  "description": "Document schema validation",
  "type": "object",
  "additionalProperties": false,
  "required":[ "name", "tags" ],
  "properties": {
    "name": { "type": "string", "maxLength": 255 },
    "tags": {
      "type": "string"
    },
    "description": { "type": "string" },
    "price": { "type": "string", "maxLength": 50, "pattern": "^[0-9]+$"},
    "cateIds": {
      "anyOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "subjectId": { "type": "string", "maxLength": 11 },
    "classId": { "type": "string", "maxLength": 11 },
    "yearSchool": { "type": "string", "maxLength": 4 },
    "collectionId": { "type": "string", "maxLength": 11 },
    "userId": { "type": "string" }
  }
}