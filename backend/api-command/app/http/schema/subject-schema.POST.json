{
  "$id": "http://dethithpt.com/subject-create-schema#",
  "title": "Subject",
  "description": "Subject schema validation",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "description"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "userId": {
      "type": "string",
      "minLength": 1
    },
    "priority": {
      "type": "integer",
      "enum": [0, 1]
    },
    "position": {
      "type": "string",
      "minLength": 1,
      "pattern": "/^[0-9]+$/"
    }
  }
}