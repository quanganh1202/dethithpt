{
  "$id": "http://dethithpt.com/news-create-schema#",
  "title": "News",
  "description": "News schema validation",
  "type": "object",
  "additionalProperties": false,
  "required": ["userId", "name", "text", "active"],
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 255
    },
    "text": {
      "type": "string",
      "minLength": 1
    },
    "priority": {
      "type": "string",
      "minLength": 1,
      "enum": ["0", "1"]
    },
    "active": {
      "type": "string",
      "minLength": 1,
      "enum": ["0", "1"]
    },
    "userId": {
      "type": "string",
      "minLength": 1
    }
  }
}